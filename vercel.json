{
  "version": 2,
  "public": true,
  
  "installCommand": "npm install --prefix ./backend && npm install --prefix ./frontend && npm run build --prefix ./frontend",
  
  "builds": [
    {
      "src": "backend/src/index.js",
      "use": "@vercel/node"
    },
    {
      // Aqui, a Vercel entende que a saída são arquivos estáticos
      "src": "frontend/build/**", 
      "use": "@vercel/static"
    }
  ],
  
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/$1"
    }
  ]
}