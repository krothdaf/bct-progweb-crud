{
  "version": 2,
  "public": true,
  
  // CORREÇÃO: Comando de instalação simplificado e robusto
  "installCommand": "npm install --production --prefix ./backend && npm install --prefix ./frontend",
  
  "builds": [
    {
      "src": "backend/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build"
      }
    }
  ],
  
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/$1"
    }
  ]
}